@model List<EmployeeManagement.Models.Employee>

@{
    ViewBag.Title = "Employees";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">

    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <h2>Employees List</h2>

    <a asp-action="Create" class="btn btn-success mb-3">Add Employee</a>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>EID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Position</th>
                <th>Salary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.Eid</td>
                    <td>@emp.Name</td>
                    <td>@emp.Age</td>
                    <td>@emp.Position</td>
                    <td>@emp.Salary</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@emp.Eid" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@emp.Eid" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
