@model EmployeeManagement.Models.Login
@{
    Layout = null;
    ViewBag.Title = "Login";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="login-container d-flex justify-content-center align-items-center vh-100">
    <div class="login-card p-5 rounded shadow">
        <h2 class="text-center mb-4 fw-bold">Admin Login</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form asp-action="Verify" method="post">
            <div class="form-floating mb-3">
                <input asp-for="username" class="form-control" placeholder="Username" required />
                <label asp-for="username">Username</label>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="password" type="password" class="form-control" placeholder="Password" required />
                <label asp-for="password">Password</label>
            </div>

            <button type="submit" class="btn btn-primary w-100 login-btn">Login</button>
        </form>
    </div>
</div>
<div id="welcomePopup"
     style="position: fixed; top: 20px; right: 20px;
            background: linear-gradient(135deg, #6a11cb, #2575fc);
            color: #fff; padding: 15px 25px; border-radius: 12px;
            font-size: 16px; font-weight: 500;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
            opacity: 0; transform: translateY(-20px);
            transition: all 0.6s ease; z-index: 9999;">
    ðŸ‘‹ Hello, welcome back to the Employee Login Panel!
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const popup = document.getElementById("welcomePopup");

        // Fade in
        setTimeout(() => {
            popup.style.opacity = "1";
            popup.style.transform = "translateY(0)";
        }, 300);

        // Fade out after 6 seconds
        setTimeout(() => {
            popup.style.opacity = "0";
            popup.style.transform = "translateY(-20px)";
        }, 6000);
    });
</script>




<style>
    .login-container {
        width: 100%;
        height: 100%;
        background: linear-gradient(-45deg, #1e3c72, #2a5298, #1e3c72, #2a5298);
        background-size: 400% 400%;
        animation: gradientBG 15s ease infinite;
    }

    @@keyframes gradientBG {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    .login-card {
        background-color: rgba(255, 255, 255, 0.96);
        width: 100%;
        max-width: 400px;
        border-radius: 20px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        animation: fadeIn 1s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

 
    .form-control:focus {
        border-color: #2a5298;
        box-shadow: 0 0 12px rgba(42, 82, 152, 0.6);
        transition: 0.3s;
    }

    .login-btn {
        background: linear-gradient(90deg, #2a5298, #1e3c72);
        border: none;
        transition: all 0.3s ease;
        font-weight: 600;
    }

        .login-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 0 12px rgba(30, 60, 114, 0.6);
        }

    @@media (max-width: 576px) {
        .login-card {
            padding: 2rem 1.5rem;
        }

        h2 {
            font-size: 1.4rem;
        }
    }
</style>
